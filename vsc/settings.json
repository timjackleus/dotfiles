// Place your settings in this file to overwrite the default settings
{
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "pasteAndIndent.selectAfter": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.tabCompletion": true,
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "'Operator Mono', 'Input Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontWeight": "normal",
  "editor.fontSize": 14,
  "workbench.colorCustomizations": {
    "statusBar.background": "#252526",
    "editorCursor.foreground": "#ae00ff",
    "editorLineNumber.foreground": "#8a8a8a",
    "activityBarBadge.background": "#FF79C6",
    "list.activeSelectionForeground": "#FF79C6",
    "list.inactiveSelectionForeground": "#FF79C6",
    "list.highlightForeground": "#FF79C6",
    "scrollbarSlider.activeBackground": "#FF79C650",
    "editorSuggestWidget.highlightForeground": "#FF79C6",
    "textLink.foreground": "#FF79C6",
    "progressBar.background": "#FF79C6",
    "pickerGroup.foreground": "#FF79C6",
    "tab.activeBorder": "#FF79C6"
  },
  "editor.formatOnSave": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true
  },
  "guides.enabled": false,
  "css.validate": false,
  "workbench.colorTheme": "Dracula",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "plaintext": "jade"
  },
  "markdown.extension.preview.autoShowPreviewToSide": true,
}
